<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="id.co.kmn.backend.model.SecRolegroup" table="sec_rolegroup">

        <!--
              <id name="id" type="long"> <column name="rlg_id" /> <generator
              class="assigned" /> </id>
          -->

        <id name="id" type="long">
            <column name="rlg_id"/>
            <generator class="native" />
        </id>

        <version name="version" column="VERSION" type="integer"/>

        <many-to-one name="secRole" class="id.co.kmn.backend.model.SecRole"
                     fetch="select">
            <column name="rol_id"/>
        </many-to-one>
        <many-to-one name="secGroup" class="id.co.kmn.backend.model.SecGroup"
                     fetch="select">
            <column name="grp_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>
